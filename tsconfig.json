{
  "compilerOptions": {
    "lib": ["es2020", "DOM"],
    "target": "ES2020",
    "moduleResolution": "node",
    "module": "esnext",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "checkJs": true,
    // "emitDeclarationOnly": true,
    "baseUrl": ".",
    "declarationDir": "types",
    "maxNodeModuleJsDepth": 0,
    "skipLibCheck": true,
    "outDir": "./dist/",
    "paths": {
      "assets/*": ["./public/*"]
    }
  },
  "include": ["src/**/*.js", "src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules"]
}
